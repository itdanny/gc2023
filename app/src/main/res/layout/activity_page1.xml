<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="38"
    android:orientation="vertical"
    android:padding="2dp" >

    <RelativeLayout android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         >

		<TextView
		    android:id="@+id/xmlPage1ScreenType"
		    android:tag="standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text=" "
            android:textSize="8sp" />
        <LinearLayout
            android:id="@+id/xmlPage1UpperTopLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xmlPage1EngYear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="11dp"
                android:gravity="left"
                android:inputType="none"
                android:text="201X"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/xmlPage1EngMonthName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="none"
                android:text="Decemeber"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xmlPage1ChiMonthName"
                android:layout_marginTop="4dp"
                android:layout_marginRight="11dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:inputType="none"
                android:text="一月"
                android:textSize="22sp" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/xmlPage1HolyDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:inputType="none"
            android:text="童\n貞\n女\n馬\n利\n亞\n聞\n報\n日"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xmlPage1HolyDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xmlPage1HolyDay1"
            android:inputType="none"
            android:text="聖\n提\n摩\n太\n與\n聖\n提\n多\n日"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xmlPage1Holiday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:inputType="none"
            android:text="香\n港\n特\n別\n行\n政\n區"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xmlPage1Holiday2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/xmlPage1Holiday1"
            android:inputType="none"
            android:text="成\n立\n紀\n念\n日\n翌\n日"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/xmlPage1UpperBottomLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2" >

                 <TextView
                     android:id="@+id/xmlPage1ChiLunarYear"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center"
                     android:layout_weight="2"
                     android:gravity="center"
                     android:inputType="none"
                     android:text="甲午年"
                     android:textSize="@dimen/std_lunar_font_size" />

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:orientation="vertical" >

                     <TextView
                         android:id="@+id/xmlPage1ChiLeftYear"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:inputType="none"
                         android:text="十二月大"
                         android:textSize="@dimen/std_lunar_font_size" />

                     <TextView
                         android:id="@+id/xmlPage1ChiLeftWeather"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:inputType="none"
                         android:text="初一"
                         android:textSize="@dimen/std_lunar_font_size" />
                 </LinearLayout>
             </RelativeLayout>

            <!-- android:background="@drawable/round_corner_weekday" -->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="5" >

                <ImageView
                    android:id="@+id/xmlPage1WeekImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
 
                <TextView
                    android:id="@+id/xmlPage1WeekDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"	                    
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:inputType="none"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"                    
                    android:text="星期二 TUE"
                    android:textSize="18sp" />
	                         
            </RelativeLayout>
            <!--
                         <TextView
                        android:id="@+id/xmlPage1WeekDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@drawable/green_weekday_2015"
                        android:gravity="center"
                        android:inputType="none"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="星期二 TUE"
                        android:textSize="22sp" />
            -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/xmlPage1ChiLunarMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="十二月大"
                    android:textSize="@dimen/std_lunar_font_size" />

                <TextView
                    android:id="@+id/xmlPage1ChiLunarDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="初一"
                    android:textSize="@dimen/std_lunar_font_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/xmlPage1Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:inputType="none"
            android:text="21"
            android:textSize="160sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout android:layout_weight="11"
        android:id="@+id/xmlPage1Middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/xmlPage1ImageFrame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/green_frame_2015" />
        <ImageView
            android:id="@+id/xmlPage1ImageFrameUpper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:src="@drawable/green_frame_2015_upper" />
        <ImageView
            android:id="@+id/xmlPage1ImageFrameLower"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:src="@drawable/green_frame_2015_upper" />

        <!--
        android:text="金句金句金句金句金句金句金句金句金句\n金句2\n金句3\n金句4"
        android:text="金句金句金句金句金句金句"
        android:textSize="13sp" -->
        <TextView
            android:id="@+id/xmlPage1GoldText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/std_gold_left_right"
            android:layout_marginRight="@dimen/std_gold_left_right"
            android:layout_marginTop="@dimen/std_p_image_top"
            android:gravity="center"            
            android:textSize="22sp" />

        <TextView
            android:id="@+id/xmlPage1GoldVerse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="@dimen/std_p_image_bottom"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right|bottom"
            android:text="[XXXXXXXXXX]"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         >

        <ImageView
            android:id="@+id/xmlPage1ImageIcon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:padding="16dp"
            android:scaleType="centerInside"
           	android:layout_marginBottom="6dp"
            android:src="@drawable/green_icon_2015"
            android:visibility="visible" />

        <TextView
            android:id="@+id/xmlPage1BigText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/std_wisdom_left_margin"
            android:layout_marginRight="@dimen/std_wisdom_right_margin"
            android:layout_marginTop="0dp"
            android:gravity="left|top"
            android:text="小知識\n1234567890123456789012\n小知識\n小知識\n"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xmlPage1BigHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="right|bottom"
            android:text="Hint …………………."
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>